<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/controlshow"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@color/controlshow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_notification"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/btn_notification"

                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|right">

        <Button
            android:id="@+id/tts_btn_person_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="20sp"
            android:background="@mipmap/btn_background"
            android:text="发音人"
            android:textColor="@drawable/btn_text_color"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/tts_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="20sp"
            android:background="@mipmap/btn_background"
            android:text="继续"
            android:textColor="@drawable/btn_text_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tts_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="20sp"
            android:background="@mipmap/btn_background"
            android:text="暂停"
            android:textColor="@drawable/btn_text_color"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>